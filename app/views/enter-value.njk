{% extends './layouts/layout.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: "/"
      }
    ]
  }) }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Testing POC</h1>

    {{ govukWarningText({
      text: "This is not a real service and is for demonstration purposes only.",
      iconFallbackText: "Warning"
    }) }}

    {% if errors %}
    {{ govukErrorSummary({
      titleText: 'Errors have been identified',
      errorList: errors
    }) }}
    {% endif %}

    <form method="POST" action="/send-message">
      {{ govukInput({
        label: {
          text: "Enter the amount of arable land you have (in hectares)",
          classes: "govuk-label--l",
          isPageHeading: true
        },
        hint: {
          text: "A minimum of 5% of all arable land will need to be set aside. Payment rate is £123 per hectare of total arable land area."
        },
        id: "arable",
        name: "arable"
      }) }}

      {{ govukInput({
        label: {
          text: "Enter the amount of grassland you have (in hectares)",
          classes: "govuk-label--l",
          isPageHeading: true
        },
        hint: {
          text: "A minimum of 5% of all grassland will need to be set aside. Payment rate is £456 per hectare of total grassland area."
        },
        id: "grassland",
        name: "grassland"
      }) }}

      {{ govukButton({
        text: "Send"
      }) }}
    </form>
  </div>
  <div>

</div>
{% endblock %}
